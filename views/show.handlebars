<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>

      <a class="btn btn-success" href="/restaurants/new">
        新增餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>


<!-- show -->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container" align="center">
  <div class="form-group col-12 col-md-10 col-lg-8 mx-auto">
    <div>

      <p>
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p>
        <span class="text-secondary">
          <i class='fas fa-map-marker pr-2'></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <a class="fas fa-location-arrow pr-2 fa-xs"></a>
        </a>
      </p>

      <p>
        <span class="text-secondary">
          <a class="fas fa-mobile-alt pr-2"></a>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p>
        <span class="text-secondary">
          <a class="fas fa-mobile-alt pr-2"></a>
          簡介：
        </span>
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <a href="/restaurants/{{{restaurant._id}}}/edit" class="btn btn-info"> Edit</a>
      <form action="/restaurants/{{{restaurant._id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">delete</button>
      </form>
    </div>
  </div>
</div>